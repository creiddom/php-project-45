#!/usr/bin/env php
<?php

$autoloaders = [
    __DIR__ . '/../vendor/autoload.php', // локальная установка
    __DIR__ . '/../../autoload.php',     // глобальная установка (composer global)
];
foreach ($autoloaders as $file) {
    if (file_exists($file)) {
        require_once $file;
        break;
    }
}

use function Hexlet\Code\Engine\runGame;
use function Hexlet\Code\Games\Progression\generateRoundData;
use const Hexlet\Code\Games\Progression\DESCRIPTION;

// Запускаем игру. Имя пользователя спрашивается внутри движка.
runGame('Hexlet\\Code\\Games\\Progression\\generateRoundData', DESCRIPTION);
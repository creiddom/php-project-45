#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

use function Hexlet\Code\Cli\greeting;                     // I/O: Получить имя
use function Hexlet\Code\Engine\runGame;                   // Движок: Запустить цикл
use function Hexlet\Code\Games\Progression\generateRoundData;     // Игра Progression: Генерация вопроса
use const Hexlet\Code\Games\Progression\DESCRIPTION;             // Игра Progression: Правила игры
use function cli\line;

line('Welcome to the Brain Game!');
$name = greeting();
line("Hello, %s!", $name);

runGame($name, 'Hexlet\Code\Games\Progression\generateRoundData', DESCRIPTION);
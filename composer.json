{
    "name": "hexlet/code",
    "description": "Мой первый проект 'Игры Разума' на PHP",
    "license": "proprietary",
    "autoload": {
        "files": [
            "src/Engine.php",
            "src/Games/Even.php",
            "src/Games/Calc.php",
            "src/Games/Gcd.php",
            "src/Games/Progression.php",
            "src/Games/Prime.php"
        ]
    },
    "require": {
        "wp-cli/php-cli-tools": "^0.12.6"
    },
    "bin": [
        "bin/brain-even",
        "bin/brain-calc",
        "bin/brain-gcd",
        "bin/brain-progression",
        "bin/brain-prime"
    ],
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^4.0",
        "hexlet/phpstan-fp": "^3.1",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "scripts": {
        "phpstan": "phpstan analyse -c phpstan.neon --ansi src",
        "phpcs": "phpcs src"
    }
}
